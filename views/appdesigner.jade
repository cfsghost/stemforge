!!!
html
	head
		meta(name='apple-mobile-web-app-capable', content='yes')
		meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
		title AppDesigner
		link(href='/css/default.css', media='all', rel='stylesheet', type='text/css')
		link(href='/js/enyo/enyo.css', media='all', rel='stylesheet', type='text/css')
		script(type='text/javascript', src='/js/enyo/enyo.js')
		script(type='text/javascript', src='/frex')
		script(type='text/javascript', src='/js/index.js')
		script
			enyo.depends(
				'$lib/layout',
				'$lib/onyx',
				'/components/appdesigner'
			);

	body.onyx.enyo-unselectable

		script

			App.require('AppDesigner', function() {

				new (enyo.kind({
					kind: 'FittableRows',
					classes: 'enyo-fit onyx',
					components: [
						{
							kind: 'onyx.Toolbar',
							layoutKind: 'FittableColumnsLayout',
							components: [
									{ content: 'AppDesinger', fit: true },
									{ kind: 'onyx.Button', content: 'Save' }
							]
						},
						{
							kind: 'AppDesigner.Panel'
						}
					],
					rendered: function() {
						this.inherited(arguments);
					}
				}))().renderInto(document.body);
			});

